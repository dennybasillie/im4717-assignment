/**
 * Objects
 */

.header
	color color-primary

.header a
	text-decoration none

.button
	display flex
	flex-direction row
	align-self center
	align-items center
	justify-items center
	padding size-s size-m
	cursor pointer
	text-transform none
	text-decoration none
	color color-black
	border none
	transition()

.button:hover
	color lightness(color-primary 50%)

.button--primary
	background color-primary
	color color-white
	border-radius()

.button--primary:hover
	background lightness(color-primary 50%)
	color color-white

.button--secondary
	background color-light-grey
	color color-black
	border-radius()

.button--secondary:hover
	color inherit
	background alpha(color-light-grey, 0.75)

.button--ghost
	background none
	color color-black
	outline()
	border-radius()

.icon
.icon *
	display flex

.button__icon
	margin-right size-s

.form--search
	display flex
	flex 1

.input
	border none
	padding size-s size-m
	line-height lh-s
	box-shadow(inset 0 0 1px 1px alpha(color-black, 0.125))
	border-radius()

.input:focus
	box-shadow(0 0 2px 0 alpha(color-secondary, 1))

.input::placeholder
	color alpha(color-black, 0.5)

.badge
	background color-primary
	border-radius 1em
	font-size sub-h3
	height size-m
	width size-m
	color color-white
	display flex
	align-self center
	align-items center

.badge--empty
	background color-black

.button__badge
	margin-left size-s
