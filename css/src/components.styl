/**
 * Components
 */

/**
 * Navigation
 */

.nav
	background color-white
	box-shadow()
	width 100%
	z-index 1000
	+above(breakpoint-mobile)
		position fixed

.nav--fix
	+above(breakpoint-mobile)
		height 92px

.nav--primary
	padding 0 0 0 0
	z-index 100

.nav--tertiary
	background color-white
	// box-shadow(inset 0 1px 0 0 alpha(color-black, 0.125))
	border-top 1px solid alpha(color-black, 0.125)
	box-shadow()
	position absolute
	width 100%
	z-index 10
	display none
	transition()

.nav__logo
	display flex
	margin-right size-l

.nav__logo img
	display flex
	width 7.5rem
	height 100%

.nav__menu
	align-items center
	line-height 1em

.menu__button
	padding size-l size-m

.menu__search
	margin 0 size-m

.nav__submenu
	justify-content flex-end
	align-items center
	font-size sub-h2
	line-height 1em

.submenu__button
	color color-black

.category
	align-items center
	font-size base

.category__button
	padding size-m size-l

.search__input
	border-top-right-radius 0px
	border-bottom-right-radius 0px

.search__button
	border-top-left-radius 0px
	border-bottom-left-radius 0px

/**
 * Hero
 */

.hero
	margin-bottom size-xxl

.hero__half
	width 50%
	height calc(100vh - 92px - 64px)
	display flex
	justify-content center
	align-items center
	text-align center

.hero__half--women
	background-image url('./images/hero-women.jpg')
	+hd()
		background-image url('./images/hero-women@2x.jpg')
	background-size cover
	background-position right

.hero__half--men
	background-image url('./images/hero-men.jpg')
	+hd()
		background-image url('./images/hero-men@2x.jpg')
	background-size cover
	background-position left

.hero__button
	text-transform uppercase
	letter-spacing 0.2em
	font-weight 600
	padding size-xl size-xxl
	background color-primary
	color color-white

/**
 * Collection
 */

[id^=collection]
	padding size-xl 0

.collection__signifier
	height size-xs
	width 6rem
	margin-bottom size-s
	border-radius(2px)
	background color-primary

/**
 * Product
 */

.product
	padding-top size-l
	padding-bottom size-l

.product__label
	position absolute
	display block
	bottom 0

.product__label *
	font-size sub-h3
	letter-spacing 0.1em
	line-height lh-m
	text-transform uppercase
	padding size-xs size-s
	background color-black
	color color-white
	margin-top size-xxs
	float left
	clear both
	cursor pointer
	border-top-right-radius 2px
	border-bottom-right-radius 2px

.product__label--new
	background color-black

.product__label--popular
	background color-black

.product__label--discount
	background color-black

.product__image
	margin-bottom size-m

.product__image img
	width 100%

.product__name
	margin-bottom size-s
	overflow hidden

.product__name a
	color inherit
	text-decoration none

.product__price
	margin-bottom size-m
	align-items center

.product__price--current
	margin-right size-s
	color color-primary

.product__price--pre-discount
	text-decoration line-through
	color color-dark-grey

.product__color
	flex-wrap wrap

.product__color *
	width size-l
	height size-s
	margin-right size-xs
	margin-bottom size-xs
	background color-black
	border-radius(2px)

.product__color--black
	background color-black

.product__color--dark-grey
	background color-dark-grey

.product__color--grey
	background color-grey

.product__color--light-grey
	background color-light-grey

.product__color--red
	background color-red

.product__color--orange
	background color-orange

.product__color--yellow
	background color-yellow

.product__color--green
	background color-green

.product__color--blue
	background color-blue

.product__color--purple
	background color-purple
/**
 * Shop
 */

.sort__select
	margin-left size-s

/**
 * Shop Sidebar
 */

.filter
	width 100%
	padding-top size-l

.label--checkbox.filter:hover
	color color-primary

.filter-group
	margin-bottom size-m

.filter__header
	display flex
	flex-direction row
	justify-content space-between
	padding-bottom size-xs
	margin-bottom size-s
	box-shadow(0 1px 0 0 color-dark-grey)

.header__reset
	text-transform uppercase
	font-size sub-h2
	letter-spacing 0.025em
	cursor pointer
	color color-dark-grey

.search-result
	display flex
	flex-direction row
	justify-content space-between
	margin size-l 0

.search-result__info
	display flex
	justify-content center

.price
	justify-content space-between
	align-items center

.price__input
	width 42%
	padding size-s size-s

.price__input input
	display inline-block
	margin-left size-xs
	width 70%
	border none

.filter__button
	margin-top size-s
	width 100%
	justify-content center
	text-align center

/**
 * Footer
 */

.footer
	line-height lh-s
	padding size-l 0
	background color-black
	color color-grey
	margin-top size-xxl

.footer__menu
	font-size sub-h1
	align-items center

.footer__button
	color color-grey
	justify-self flex-start

.footer__copyright
	font-size sub-h1
	justify-self flex-end
	flex 1
	text-align right
