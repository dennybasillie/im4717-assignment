/**
 * Generic
 */

/* Box sizing */
*, *:before, *:after {
	vendor('box-sizing', 'border-box')
}

/* Consistent bold instead of bolder */
b
strong
	font-weight bold

/* Reset default cursor for disabled elements. */
button[disabled]
html input[disabled]
	cursor default

/* Reset table spacings */
table
	border-collapse collapse
	border-spacing 0

td
th
	padding 0

/* Remove default margin. */
body
	margin 0

/* Remove dotted outline on link focus and hover. */
aactive
ahover
	outline 0

/* Correct button and select style inheritance in Firefox */
button
select
	text-transform none

/* Correct focus style in Firefox. */
button-moz-focus-inner
[type="button"]-moz-focus-inner
[type="reset"]-moz-focus-inner
[type="submit"]-moz-focus-inner
	border-style none
	padding 0

button-moz-focusring
[type="button"]-moz-focusring
[type="reset"]-moz-focusring
[type="submit"]-moz-focusring
	outline 1px dotted

/* Correct the cursor style of increment and decrement buttons in Chrome. */
[type="number"]-webkit-inner-spin-button
[type="number"]-webkit-outer-spin-button
	height auto

/* Correct the odd appearance in Chrome. */
[type="search"]
	-webkit-appearance textfield
	-webkit-box-sizing content-box
	box-sizing content-box
